    "label": "Build SFML Test",
    "type": "shell",
    "command": "g++",
    "args": [
        "-g",
        "${workspaceFolder}/test.cpp",
        "-o",
        "${workspaceFolder}/test.exe",
        "-I",
        "C:\\msys64\\mingw64\\SFML-2.6.2\\include",
